{
  "name": "gtm-brain-slack-bot",
  "version": "1.0.0",
  "description": "Conversational Salesforce intelligence via Slack",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --maxWorkers=2",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "keywords": ["salesforce", "slack", "ai", "gtm", "sales-intelligence"],
  "author": "Eudia RevOps",
  "license": "UNLICENSED",
  "dependencies": {
    "@slack/bolt": "^3.14.0",
    "express": "^4.18.2",
    "jsforce": "^2.0.0-beta.25",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0",
    "exceljs": "^4.3.0",
    "openai": "^4.11.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.57.1",
    "nodemon": "^3.0.1",
    "@types/jest": "^29.5.8"
  }
}
